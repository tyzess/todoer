<% @page = 'index' %>
<% @page_title = t(:page_index_title) %>
<% @page_lead_text = t(:page_index_lead) %>


<table width='100%' class="table table-striped">
  <tr>
    <th class='span2'><%= t(:table_title) %></th>
    <th class='span2'><%= t(:table_due_date) %></th>
    <th class='span4'><%= t(:table_description) %></th>
    <th class='span1'><%= t(:table_actions) %></th>
  </tr>
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.title %></td>
      <td><%= todo.datetime %>
        <% if todo.overdue? %>
          <span class="label label-important pull-right"> <%= t(:table_tag_overdue) %></span>
        <% end %>
      </td>
      <td><%= todo.description_with_size(20) %></td>
      <td>
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to raw('<i class="icon icon-edit"></i>'), todo_path(todo), :class => 'btn' %>
            <%= link_to raw('<i class="icon icon-remove icon-white"></i>'), todo, :class => "btn btn-danger", :method => :delete %>
          </div>
        </div>
      </td>
    </tr>
  <% end %>
</table>
