<!DOCTYPE html>
<html>

<head>
  <title>Todoer</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>

<body>

  <div class="container">

    <div class="hero-unit">
      <h1><%= @page_title %></h1>
      <p class='lead'><%= @page_lead_text %></p>
    </div>

    <div class="container">
      <ul class="nav nav-pills">
        <li class="<%= 'active' if @page == 'index' %>"><a href="<%= todos_path %>">Home</a></li>
        <li class="<%= 'active' if @page == 'new' %>"><a href="<%= new_todo_path %>">New</a></li>
        <li class="<%= 'active' if @page == '' %>"><a href="#">Stuff</a></li>
        <li></li>
      </ul>
    </div>

    <%= create_alert_field(flash[:type], flash[:title], flash[:message], flash[:options]) if flash[:type] %>

    <%= yield %>

    <hr>
    <footer>
      <p>&copy; Todoer by Urs Zysset</p>
    </footer>

  </div>

</body>
</html>